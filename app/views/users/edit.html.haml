%h1 Your Sniphr settings

= semantic_form_for(current_user, :html => {:class => ""}) do |form|

	= errors_for form
	
	= form.inputs do
		= form.input :mode, :as => :select, :collection => %w(public private), :include_blank => false
		= form.input :whitelist, :hint => "(one domain per line; leave blank to allow all domains)"

	= form.buttons do
		= form.submit "Save"
= form_for(@snip) do |f|
  - if @snip.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@snip.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @snip.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :url
    %br
    = f.text_field :url
  .field
    = f.label :content
    %br
    = f.text_area :content
  .field
    = f.label :user
    %br
    = f.text_field :user

  .actions
    = f.submit
